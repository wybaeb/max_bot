REMOTE_HOST=147.45.162.95
REMOTE_USER=root
REMOTE_PASSWORD=

TELEGRAM_BOT_TOKEN=
MAX_BOT_TOKEN=

# Куда в MAX отправлять репосты:
# укажите только один вариант (chat или user).
MAX_TARGET_CHAT_ID=
MAX_TARGET_USER_ID=

# Из каких Telegram чатов принимать сообщения.
# Пусто = принимать из всех, где состоит бот.
# Пример: -1001234567890,-1009876543210
TELEGRAM_SOURCE_CHAT_IDS=

# Задержка перед репостом (миллисекунды)
REPOST_DELAY_MS=3000

# Telegram Bot API base URL.
# Для стандартного API оставьте как есть.
# Для self-hosted Bot API укажите, например: http://127.0.0.1:8081
TELEGRAM_API_BASE_URL=https://api.telegram.org

# Окно сборки альбома (media_group) перед отправкой одним сообщением в MAX
MEDIA_GROUP_COLLECT_MS=1200

# Добавлять внизу сообщения ссылку на Telegram-канал:
# tg: [<channel name>](https://t.me/<username>)
INCLUDE_TELEGRAM_FOOTER=true
